		"tooltip-format-ethernet": "Û∞±ì {ifname}\nIP: {ipaddr}",
		"on-click-right": "niri msg action spawn -- nm-connection-editor"
	},
	// keyboard layout
	"keyboard-state": {
		"numlock": false,
		"capslock": true,
		"scrollock": true,
		// "format": "{name} {icon}",
		"format": {
