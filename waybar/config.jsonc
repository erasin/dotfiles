		"interval": 1,
		"format": "ÔÄó {:%H:%M:%S %d/%m}",
		"format-alt": "{:L%A, %d/%m/%Y (%R)} ÔóØ ",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"on-click-right": "niri msg action spawn -- gnome-calendar",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"days": "<span color='#ecc6d9'><b>{}</b></span>",
				"weeks": "<span color='#99ffdd'><b>W{}</b></span>",
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"custom/logout": {
		"format": "ÔÄë",
		"tooltip": false,
		// "on-click": "niri msg action spawn -- eww open --toggle powermenu""menu": "on-click",
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"lock": "niri msg action spawn -- swaylock",
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			// "hibernate": "systemctl hibernate"
			"logout": ""
		}
	}
