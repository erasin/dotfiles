		"tooltip-format": "{percentage}%",
		"on-click": "niri msg action spawn -- gnome-system-monitor",
		"states": {
			"warning": 70,
			"critical": 90
		}
	},
	"network": {
		"interval": 5,
		"format-wifi": "Ôá´",
		"format-ethernet": "Û∞±ì",
		"format-disconnected": "Û∞Öõ No connection",
