		"format": "{}",
		"tooltip-format": "Êí≠Êîæ/ÊöÇÂÅú",
		"return-type": "text",
		"interval": 5,
		"exec": "wayinfo player status-icon",
		"on-click": "wayinfo player toggle"
	},
	"custom/media": {
		"format": "{}",
		"return-type": "text",
		"max-length": 85,
		"interval": 5,
		"exec": "wayinfo player title"
		// "on-click": "niri msg action spawn -- eww open --toggle music"
	},
	"custom/media-next": {
		"format": "Û∞í≠",
		"tooltip-format": "‰∏ã‰∏ÄÊõ≤",
		"return-type": "text",
		"interval": 5,
		"exec": "wayinfo player status",
		"on-click": "wayinfo player next"
	},
	"custom/lyric": {
		"exec": "waylrc",
		"return-type": "json",
		"escape": true
	},
