	"custom/notification": {
		"tooltip": true,
		"format": "{icon}",
		"format-icons": {
			"notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
			"none": "ÔÇ¢"
		},
		"interval": 1,
		"return-type": "json",
		"exec-if": "which makoctl",
		"exec": "$HOME/.config/waybar/scripts/mako-status.sh",
		"on-click": "makoctl restore",
		"on-click-right": "makoctl dismiss -a",
		"escape": true
	},
	"custom/weather": {
		"format": "{text} {alt}",
		"return-type": "json",
		// "exec": "$HOME/.config/waybar/scripts/weather.sh --waybar --city Êù≠Â∑û --key-file $HOME/.config/tokens/gaode.txt",
		"exec": "wayinfo weather --waybar --city Êù≠Â∑û --key-file $HOME/.config/tokens/gaode.txt",
		"on-click": "niri msg action spawn -- gnome-weather"
	},
	"group/audio": {
		"orientation": "inherit",
		"drawer": {
			"transition-duration": 500,
			"children-class": "not-power",
			"transition-left-to-right": true
		},
		"modules": ["pulseaudio", "pulseaudio/slider"]
	},
	"pulseaudio/slider": {
		"min": 0,
		"max": 100,
		"orientation": "horizontal"
	},
	"pulseaudio": {
