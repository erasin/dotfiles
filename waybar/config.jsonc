			"default": ["‚ñÅÛ∞ìÉ", "‚ñÇÛ∞ìÉ", "‚ñÉÛ∞ìÉ", "‚ñÑÛ∞ìÉ", "‚ñÖÛ∞ìÉ", "‚ñÜÛ∞ìÉ", "‚ñáÛ∞ìÉ", "‚ñàÛ∞ìÉ"]
		},
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"on-click-right": "pavucontrol",
		"tooltip": false
	},
	// Install blueman pulseaudio-bluetooth
	"bluetooth": {
		"format": "Ôäî {status}",
		"format-disabled": "Û∞Ç≤",
		"format-connected": "Ôäî {num_connections} ",
		// "format-connected": "Ôäî {device_alias}",
		"format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
		// "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
		"tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
		"tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
		"on-click": "niri msg action spawn -- blueman-manager"
	},
	"custom/temperature": {
		"exec": "$HOME/.config/waybar/scripts/temperature.sh",
		"return-type": "json",
		"interval": 5,
		"format": "{icon} {text}¬∞",
		"format-alt": "{icon} {alt}¬∞",
		"tooltip": true,
		// "tooltip-format": "{tooltip}",
		"format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
		"max-value": 100
	},
	"battery": {
		"interval": 10,
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format-time": "{H}:{M:02}",
		"format": "{icon} {capacity}% ({time})",
		"format-charging": "ÔÉß {capacity}% ({time})",
		"format-charging-full": "ÔÉß {capacity}%",
		"format-full": "{icon} {capacity}%",
		"format-alt": "{icon} {power}W",
		"format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
		"tooltip": false
	},
	"cpu": {
		"interval": 10,
		// "tooltip": false,
		"format": "Ôãõ {usage}%",
		"format-alt": "Ôãõ {load}",
		"on-click": "niri msg action spawn -- gnome-system-monitor",
		"states": {
			"warning": 70,
			"critical": 90
		}
	},
	"memory": {
